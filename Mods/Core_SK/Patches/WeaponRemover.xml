<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Gun_EmpLauncher" or defName="Bullet_EMPLauncher" 
		or defName="Gun_SmokeLauncher" or defName="Bullet_SmokeLauncher"]</xpath>
	</Operation>

  <!-- ========== Remove Needle Gun ========== -->

  <Operation Class="PatchOperationRemove">
    <xpath>Defs/ThingDef[defName="Gun_Needle"]</xpath>
  </Operation>

  <!-- Increase Orbital Bombardment Range -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="OrbitalTargeterBombardment" or defName="OrbitalTargeterPowerBeam"]/verbs/li/range</xpath>
    <value>
      <range>60</range>
    </value>
  </Operation>

</Patch>