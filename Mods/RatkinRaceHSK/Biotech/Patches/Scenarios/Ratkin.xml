	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ScenarioDef[defName="RK_Scenario"]/scenario/parts/li[@Class="ScenPart_ConfigPage_ConfigureStartingPawns"]</xpath>
		<value>
			<li Class="ScenPart_ConfigPage_ConfigureStartingPawns_Xenotypes">
			  <def>ConfigurePawnsXenotypes</def>
			  <!--<pawnChoiceCount>8</pawnChoiceCount>-->
			  <customSummary>Start with four Ratkin.</customSummary>
			  <xenotypeCounts>
				<li>
				  <xenotype>Baseline_Ratkin</xenotype>
				  <count>4</count>
				  <description>non-baby ratkin</description>
				  <requiredAtStart>true</requiredAtStart>
				  <allowedDevelopmentalStages>Adult, Child</allowedDevelopmentalStages>
				</li>
			  </xenotypeCounts>
			</li>
		</value>
	</Operation>
				
</Patch>	